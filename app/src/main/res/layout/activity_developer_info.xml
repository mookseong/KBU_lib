<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".DeveloperINFOActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:ignore="UselessLeaf,UselessParent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="ScrollViewSize">
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                    <android.support.v7.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/profile"
                                tools:ignore="ContentDescription"
                        />

                    </android.support.v7.widget.CardView>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="Mookseong"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:text="안녕하세요!\n어플 개발자 묵성이에요!\n앞으로더 멋진 어플을 만들어보겠습니다.\nmookseong147@gmail.com"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText" android:textColor="@color/Gray"/>
                    <View
                            android:layout_width="wrap_content"
                            android:layout_height="20dp">
                    </View>
                </LinearLayout>
            </FrameLayout>
            <View android:layout_width="65dp"
                  android:background="@color/Gray"
                  android:layout_gravity="center"
                  android:layout_height="1dp">

            </View>

            <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:text="어플이 괜찮았다면\n도움을 주실 수 있으신가요?"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="UselessLeaf,UselessParent">
                    <android.support.v7.widget.CardView
                            android:id="@+id/img_pay"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="150dp"
                            android:layout_height="100dp" tools:ignore="KeyboardInaccessibleWidget">
                        <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <LinearLayout
                                    android:layout_gravity="bottom"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                <TextView
                                        android:text="이미지"
                                        android:textSize="15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:ignore="HardcodedText"/>
                                <TextView
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:text="광고보기"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" tools:ignore="HardcodedText"/>
                            </LinearLayout>
                            <ImageView
                                    android:layout_gravity="right"
                                    android:scaleType="centerCrop"
                                    android:layout_margin="10dp"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    tools:ignore="ContentDescription,RtlHardcoded" app:srcCompat="@drawable/object1"/>

                        </FrameLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                            android:id="@+id/video_pay"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="150dp"
                            android:layout_height="100dp" tools:ignore="KeyboardInaccessibleWidget,RtlHardcoded">
                        <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <LinearLayout
                                    android:layout_gravity="bottom"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                <TextView
                                        android:text="동영상"
                                        android:textSize="15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:ignore="HardcodedText"/>
                                <TextView
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:text="광고보기"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" tools:ignore="HardcodedText"/>
                            </LinearLayout>
                            <ImageView
                                    android:layout_gravity="right"
                                    android:scaleType="centerCrop"
                                    android:layout_margin="10dp"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    tools:ignore="ContentDescription,RtlHardcoded" app:srcCompat="@drawable/object2"/>

                        </FrameLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="UselessLeaf,UselessParent">
                    <android.support.v7.widget.CardView
                            android:id="@+id/coffee_pay"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="150dp"
                            android:layout_height="100dp" tools:ignore="KeyboardInaccessibleWidget">
                        <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <LinearLayout
                                    android:layout_gravity="bottom"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                <TextView
                                        android:text="커피"
                                        android:textSize="15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:ignore="HardcodedText"/>
                                <TextView
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:text="3,000원"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" tools:ignore="HardcodedText"/>
                            </LinearLayout>
                            <ImageView
                                    android:layout_gravity="right"
                                    android:layout_margin="10dp"
                                    android:scaleType="centerCrop"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    tools:ignore="ContentDescription,RtlHardcoded" app:srcCompat="@drawable/object3"/>

                        </FrameLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                            android:id="@+id/lunch_pay"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="150dp"
                            android:layout_height="100dp" tools:ignore="KeyboardInaccessibleWidget,RtlHardcoded">
                        <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <LinearLayout
                                    android:layout_gravity="bottom"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                <TextView
                                        android:text="밥사주기"
                                        android:textSize="15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:ignore="HardcodedText"/>
                                <TextView
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:text="7,000원"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" tools:ignore="HardcodedText"/>
                            </LinearLayout>
                            <ImageView
                                    android:layout_gravity="right"
                                    android:scaleType="centerCrop"
                                    android:layout_margin="10dp"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    tools:ignore="ContentDescription,RtlHardcoded" app:srcCompat="@drawable/object4"/>

                        </FrameLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>